# Server Configuration
WEBHOOK_PORT=3001
NODE_ENV=development

# Dodo Payments Configuration
# Get this from your Dodo Payments dashboard under Webhooks section
DODO_PAYMENTS_WEBHOOK_KEY=your_webhook_signing_key_from_dodo_dashboard

# Python Backend Communication
PYTHON_BACKEND_URL=http://localhost:8000
INTERNAL_API_KEY=secure_random_key_for_internal_communication

# Security and Performance Settings
ALLOWED_ORIGINS=http://localhost:3000,https://englishgpt.everythingenglish.xyz
MAX_PAYLOAD_SIZE=10mb
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_WEBHOOK_LOGGING=true